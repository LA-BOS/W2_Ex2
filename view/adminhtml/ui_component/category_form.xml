<attachment id="file:category_form.xml">
<?xml version="1.0"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Ui/etc/ui_configuration.xsd">
    <fieldset name="general">
        <field name="name" sortOrder="10" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Name</label>
                <required>true</required>
                <dataType>text</dataType>
                <formElement>input</formElement>
            </settings>
        </field>
        <field name="description" sortOrder="20" formElement="textarea">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Description</label>
                <formElement>textarea</formElement>
            </settings>
        </field>
        <field name="status" sortOrder="30" formElement="select">
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Status</label>
                <options>
                    <option name="enabled" xsi:type="option" value="1" translate="true">Enabled</option>
                    <option name="disabled" xsi:type="option" value="0" translate="true">Disabled</option>
                </options>
            </settings>
        </field>
        <field name="created_at" sortOrder="40" formElement="date">
            <settings>
                <dataType>date</dataType>
                <label translate="true">Created At</label>
                <formElement>date</formElement>
                <dataType>date</dataType>
                <visible>false</visible>
            </settings>
        </field>
        <field name="updated_at" sortOrder="50" formElement="date">
            <settings>
                <dataType>date</dataType>
                <label translate="true">Updated At</label>
                <formElement>date</formElement>
                <dataType>date</dataType>
                <visible>false</visible>
            </settings>
        </field>
    </fieldset>
</form>
</attachment>