<?php
/**
 * @var $block Tigren\SimpleBlog\Block\Category\View
 */
$category = $block->getCategory();
$posts = $block->getPosts();
?>
<div class="blog-category-view">
    <div class="page-title-wrapper">
        <h1 class="page-title">
            <span><?= $block->escapeHtml($category->getName()) ?></span>
        </h1>
    </div>
    
    <?php if ($category->getDescription()): ?>
        <div class="category-description">
            <p><?= $block->escapeHtml($category->getDescription()) ?></p>
        </div>
    <?php endif; ?>
    
    <?php if ($posts->getSize()): ?>
        <div class="post-list">
            <?php foreach ($posts as $post): ?>
                <div class="post-item">
                    <?php if ($post->getPostImage()): ?>
                        <div class="post-image">
                            <a href="<?= $block->getPostUrl($post->getId()) ?>">
                                <img src="<?= $block->getPostImageUrl($post->getPostImage()) ?>" 
                                     alt="<?= $block->escapeHtml($post->getTitle()) ?>" />
                            </a>
                        </div>
                    <?php endif; ?>
                    
                    <div class="post-info">
                        <h2 class="post-title">
                            <a href="<?= $block->getPostUrl($post->getId()) ?>">
                                <?= $block->escapeHtml($post->getTitle()) ?>
                            </a>
                        </h2>
                        
                        <div class="post-meta">
                            <?php if ($post->getAuthor()): ?>
                                <span class="author">
                                    <?= __('By') ?> <?= $block->escapeHtml($post->getAuthor()) ?>
                                </span>
                            <?php endif; ?>
                            
                            <?php if ($post->getPublishedAt()): ?>
                                <span class="date">
                                    <?= $block->formatDate($post->getPublishedAt()) ?>
                                </span>
                            <?php endif; ?>
                        </div>
                        
                        <?php if ($post->getShortContent()): ?>
                            <div class="post-short-content">
                                <p><?= $block->escapeHtml($post->getShortContent()) ?></p>
                            </div>
                        <?php endif; ?>
                        
                        <a href="<?= $block->getPostUrl($post->getId()) ?>" class="action primary">
                            <?= __('Read More') ?>
                        </a>
                    </div>
                </div>
            <?php endforeach; ?>
        </div>
    <?php else: ?>
        <p><?= __('No posts available in this category.') ?></p>
    <?php endif; ?>
    
    <div class="actions-toolbar">
        <a href="<?= $block->getUrl('blog') ?>" class="action back">
            <?= __('Back to Categories') ?>
        </a>
    </div>
</div>

