    </div>
    
    <div class="post-meta">
        <?php if ($post->getAuthor()): ?>
            <span class="author">
                <strong><?= __('Author:') ?></strong> <?= $block->escapeHtml($post->getAuthor()) ?>
            </span>
        <?php endif; ?>
        
        <?php if ($post->getPublishedAt()): ?>
            <span class="date">
                <strong><?= __('Published:') ?></strong> <?= $block->formatDate($post->getPublishedAt()) ?>
            </span>
