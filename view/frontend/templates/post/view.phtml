            <strong><?= __('Category:') ?></strong> 
            <a href="<?= $block->getCategoryUrl() ?>">
                <?= $block->escapeHtml($category->getName()) ?>
            </a>
        </span>
    </div>
    
    <?php if ($post->getPostImage()): ?>
        <div class="post-featured-image">
            <img src="<?= $block->getPostImageUrl($post->getPostImage()) ?>" 
                 alt="<?= $block->escapeHtml($post->getTitle()) ?>" />
        </div>
    <?php endif; ?>
    
    <?php if ($post->getShortContent()): ?>
        <div class="post-short-content">
            <p><strong><?= $block->escapeHtml($post->getShortContent()) ?></strong></p>
        </div>
    <?php endif; ?>
    
    <div class="post-full-content">
        <?= /* @noEscape */ $post->getFullContent() ?>
    </div>
    
    <?php if (!empty($listImages)): ?>
        <div class="post-gallery">
            <h3><?= __('Image Gallery') ?></h3>
            <div class="gallery-grid">
                <?php foreach ($listImages as $image): ?>
                    <?php if (isset($image['path'])): ?>
                        <div class="gallery-item">
                            <img src="<?= $block->getPostImageUrl($image['path']) ?>" 
                                 alt="<?= isset($image['alt']) ? $block->escapeHtml($image['alt']) : '' ?>" />
                        </div>
                    <?php endif; ?>
                <?php endforeach; ?>
            </div>
        </div>
    <?php endif; ?>
    
    <div class="actions-toolbar">
        <a href="<?= $block->getCategoryUrl() ?>" class="action back">
            <?= __('Back to %1', $block->escapeHtml($category->getName())) ?>
